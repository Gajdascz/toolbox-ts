{
  "$schema": "https://json.schemastore.org/tsconfig",
  "name": "dev",
  "description": "Development configuration covering environment tooling, mocking utilities, and typescript configuration file.",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowJs": true
  },
  "files": ["./prettier.config.js"],
  "include": ["_dev/**/*", "dev/**/*", "*.config.*"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.bench.*",
    "packages/**/*",
    "src/**/*"
  ]
}
