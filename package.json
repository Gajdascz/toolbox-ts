{
  "name": "toolbox-ts",
  "private": true,
  "description": "A monorepo for TypeScript utilities and libraries.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toolbox-ts/toolbox-ts.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": {
    "name": "Nolan Gajdascz",
    "email": "dev.gajdascz@gmail.com",
    "url": "https://github.com/gajdascz"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/config-inspector": "^1.2.0",
    "@eslint/js": "^9.34.0",
    "@inquirer/prompts": "^7.8.4",
    "@microsoft/tsdoc-config": "^0.17.1",
    "@oclif/core": "^4.5.2",
    "@oclif/plugin-help": "^6.2.32",
    "@oclif/plugin-plugins": "^5.4.46",
    "@toolbox-ts/configs": "workspace:^",
    "@types/node": "^22.18.0",
    "@typescript-eslint/utils": "^8.41.0",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "3.1.2",
    "commitizen": "^4.3.1",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^15.5.2",
    "markdownlint": "^0.38.0",
    "memfs": "^4.38.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.11",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "packageManager": "pnpm@10.15.1",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx}": [
      "pnpm prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm prettier --write"
    ]
  },
  "scripts": {
    "clean:cache": "rm -rf node_modules/.cache",
    "clean:dist": "rm -rf packages/**/dist",
    "clean": "pnpm clean:cache && pnpm clean:dist",
    "build": "tsc -b tsconfig.build.json",
    "build:clean": "pnpm clean && pnpm build && pnpm install",
    "check:dependencies": "pnpm depcruiser --no-graph --no-report --log-type gh-actions-text",
    "check:types": "tsc -b tsconfig.build.json --noEmit",
    "check:format": "prettier . --check",
    "check:lint": "eslint . --max-warnings=0",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:types && pnpm check:dependencies && pnpm test",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test": "pnpm vitest --config vitest.config.ts",
    "test:ui": "pnpm test --ui",
    "generate:dependency-info": "pnpm depcruiser",
    "up": "pnpm -r up",
    "git:commit": "pnpm git-kit commit cz",
    "git:commit:amend": "pnpm git-kit commit --amend",
    "git:push": "pnpm git-kit push",
    "git:create-branch": "pnpm git-kit create-branch",
    "git:create-branch:interactive": "pnpm git-kit create-branch --interactive"
  }
}
