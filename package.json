{
  "name": "toolbox-ts",
  "private": true,
  "description": "A monorepo for TypeScript utilities and libraries.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toolbox-ts/toolbox-ts.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": {
    "name": "Nolan Gajdascz",
    "email": "dev.gajdascz@gmail.com",
    "url": "https://github.com/gajdascz"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/config-inspector": "^1.1.0",
    "@eslint/js": "^9.33.0",
    "@inquirer/prompts": "^7.8.1",
    "@microsoft/tsdoc-config": "^0.17.1",
    "@oclif/plugin-help": "^6.2.32",
    "@oclif/plugin-plugins": "^5.4.46",
    "@toolbox-ts/configs": "workspace:^",
    "@toolbox-ts/depcruiser": "workspace:^",
    "@toolbox-ts/dev-kit": "workspace:^",
    "@toolbox-ts/tseslint": "workspace:^",
    "@toolbox-ts/types": "workspace:^",
    "@types/node": "^22.17.1",
    "@typescript-eslint/utils": "^8.39.0",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "3.1.2",
    "commitizen": "^4.3.1",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "husky": "^9.1.7",
    "inquirer": "^12.9.1",
    "jiti": "^2.5.1",
    "lint-staged": "^15.5.2",
    "markdownlint": "^0.38.0",
    "memfs": "^4.36.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  },
  "packageManager": "pnpm@10.14.0",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,cjs,ts,tsx}": [
      "pnpm eslint --fix",
      "pnpm prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm prettier --write"
    ]
  },
  "scripts": {
    "clear:cache": "rm -rf node_modules/.cache",
    "rm:dist": "rm -rf dist",
    "build:clean": "pnpm clear:cache && pnpm rm:dist && pnpm build",
    "build": "tsc -b tsconfig.build.json",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test": "pnpm vitest --config vitest.config.ts",
    "generate:coverage": "pnpm run test --coverage.reporter=html",
    "generate:depgraph": "pnpm depcruiser generate-graph './packages/**/*.{ts,js,tsx,jsx}' --output='docs/reports/dependency-graph.svg'",
    "generate:depreport": "pnpm run check:dependencies --report='docs/reports/dependency-report.json'",
    "check:dependencies": "pnpm depcruiser validate './packages/**/*.{ts,js,tsx,jsx}'",
    "check:types": "tsc -b tsconfig.build.json --noEmit",
    "check:format": "prettier . --check",
    "check:lint": "eslint . --max-warnings=0",
    "check:all": "pnpm check:format && pnpm check:lint && pnpm check:types && pnpm check:dependencies && pnpm test",
    "check": "pnpm check:all",
    "up": "pnpm -r up"
  }
}
